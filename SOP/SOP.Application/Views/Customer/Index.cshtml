@model SOP.Core.Models.CustomerModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="bookings" class="panel panel-default" style="margin: 2% 0;">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6"><span style="font-weight: bold; font-size: 20px;">My Booking History</span></div>
            <div class="col-md-6"><span class="pull-right">@Html.ActionLink("Create New Booking", "Booking", null, new { @class = "btn btn-primary" })</span></div>
        </div>


    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dtable" id="dtUserBookings">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Vehicle Number
                        </th>
                        <th>Customer Name
                        </th>
                        <th>Customer Mobile Number
                        </th>
                        <th>Vehicle Model
                        </th>
                        <th>Year of manufacture
                        </th>
                        <th>Service date requested
                        </th>
                        <th>Service type requested
                        </th>
                        <th>customer ID
                        </th>
                        <th>Customer email ID
                        </th>
                        <th>Rebook button
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Bookings)
                    {   <tr>
                        <td>@item.BookingId</td>
                        <td>@item.VehicleNumber</td>
                        <td>@item.VehicleOwnerName</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.VehicleModel</td>
                        <td>@item.ManufacturingYear</td>
                        <td>@item.DateofService</td>
                        <td>@item.ServiceTypeId</td>
                        <td>@item.UserId</td>
                        <td>@item.EmailId</td>
                        <td>
                            @Html.ActionLink("Rebook", "Booking", new { bookingId = item.BookingId }, new { @class="btn btn-primary"})
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div id="feedbacks" class="panel panel-default" style="margin: 2% 0;">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6"><span style="font-weight: bold; font-size: 20px;">My Feedback History</span></div>
            <div class="col-md-6"><span class="pull-right">@Html.ActionLink("Create New Feedback", "Feedback", null, new { @class = "btn btn-primary" })</span></div>
        </div>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dtable" id="dtUserFeedbacks">
                <thead>
                    <tr>
                        <th>Feedback ID
                        </th>
                        <th>Customer Name
                        </th>
                        <th>Customer Phone
                        </th>
                        <th>Vehicle Number
                        </th>
                        <th>Vehicle Model
                        </th>
                        <th>Email Id
                        </th>
                        <th>Serviced Center Name
                        </th>
                        <th>Feedback
                        </th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model.Feedbacks)
                    {   <tr>
                        <td>@item.FeedbackId</td>
                        <td>@item.VehicleOwnerName</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.VehicleNumber</td>
                        <td>@item.VehicleModel</td>
                        <td>@item.EmailId</td>
                        <td>@item.DealerName</td>
                        <td>@item.Feedback</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
