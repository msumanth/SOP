@model List<SOP.Core.Models.BookingModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        DataTables Advanced Tables
        @Html.ActionLink("Create New Booking", "NewBooking", null, new { @class = "btn btn-primary" })
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dtable" id="dtUserBookings">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Vehicle Number
                        </th>
                        <th>Customer Name
                        </th>
                        <th>Customer Mobile Number
                        </th>
                        <th>Vehicle Model
                        </th>
                        <th>Year of manufacture
                        </th>
                        <th>Service date requested
                        </th>
                        <th>Service type requested
                        </th>
                        <th>customer ID
                        </th>
                        <th>Customer email ID
                        </th>
                        <th>Rebook button
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {   <tr>
                        <td>@item.BookingId</td>
                        <td>@item.VehicleNumber</td>
                        <td>@item.VehicleOwnerName</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.VehicleModel</td>
                        <td>@item.ManufacturingYear</td>
                        <td>@item.DateofService</td>
                        <td>@item.ServiceTypeId</td>
                        <td>@item.UserId</td>
                        <td>@item.EmailId</td>
                        <td>
                            @Html.Action("Reebook", new { bookingId = item.BookingId })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
