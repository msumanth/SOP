@model SOP.Application.Models.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--[if lt IE 9]>
      <script src="~/scripts/html5shiv.js"></script>
    <![endif]-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/sb-admin.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Scripts/datepicker/css/datepicker.css" rel="stylesheet" />
</head>
<body>

    <div id="wrapper">
        <nav class="navbar navbar-fixed-top startbootstrap-nav" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="index.php">ServiceIt Online Portal</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav">
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Help</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="/Home/Index">Login</a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
        <div class="div-page">
            <div class="row">

                <div class="login-panel panel panel-default" style="margin: 1% 20%;">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            <div class="row">
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label>First Name</label>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                                        </div>
                                        <div class="form-group">
                                            <label>Last Name</label>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                                        </div>
                                        <div class="form-group">
                                            <label>User Name</label>
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "User Name" })
                                        </div>
                                        <div class="form-group">
                                            <label>Password</label>
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                        </div>
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                                        </div>
                                        <div class="form-group">
                                            <label>Email Id</label>
                                            @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @placeholder = "Email Id" })
                                        </div>




                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <label>User Role</label>
                                            @Html.DropDownListFor(m => m.Role, Model.Roles, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Date of Birth</label>
                                            @Html.TextBoxFor(m => m.DOB, new { @id = "dpDob", @class = "datepicker form-control", @placeholder = "Select Date", @readonly = "" })
                                        </div>
                                        <div class="form-group">
                                            <label>Gender</label>
                                            @Html.DropDownListFor(m => m.Gender, Model.Genders, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Mobile Number</label>
                                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @placeholder = "Mobile Number" })
                                        </div>

                                        <div class="form-group">
                                            <label>Select A secret question</label>
                                            @Html.DropDownListFor(m => m.SecretQuestionId, Model.SecretQuestions, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Enter a secret answer</label>
                                            @Html.TextBoxFor(m => m.SecretAnswer, new { @class = "form-control", @placeholder = "Secret answer" })
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                           
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkbox">
                                        <input type="checkbox" />
                                        <label>I agree to the ServiceIt <a href="#">Terms of Service</a>  and <a href="#">Privacy Policy</a> </label>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Register" />
                                </div>
                            </div>  
                        }

                    </div>
                </div>

                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <footer>
            <div class="container">

                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            <span class="pull-left">© 2014 <a href="#" title="ServiceIt" target="_blank">ServiceIt </a></span>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- /#wrapper -->

    <!-- Core Scripts - Include with every page -->
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.metisMenu.js"></script>
    <script src="~/Scripts/datepicker/js/bootstrap-datepicker.js"></script>
    <!-- Page-Level Plugin Scripts - Blank -->
    <!-- SB Admin Scripts - Include with every page -->
    <script src="~/Scripts/sb-admin.js"></script>
    <!-- Page-Level Demo Scripts - Blank - Use for reference -->
    <script type="text/ecmascript">
        $(document).ready(function () {
            $('.datepicker').datepicker().on('changeDate', function (ev) {
                $('#dpDob').val(ev.date.toLocaleDateString());
                $('.datepicker').datepicker('hide');
            });
        });
    </script>
</body>

</html>
